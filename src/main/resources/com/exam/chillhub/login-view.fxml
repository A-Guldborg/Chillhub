<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(from 25% 25% to 100% 100%, #734b6d, #42275a)linear-gradient(from 25% 25% to 100% 100%, #734b6d, #42275a);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exam.chillhub.controllers.LoginController">
